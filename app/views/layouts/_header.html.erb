<header class="header">
	<% if signed_in? %>
		<%= link_to "Top", root_path %>
		<%= link_to "Myページ", user_path(current_user) %>
		<%= link_to "商品一覧", items_path %>
		<%= link_to "ログアウト", destroy_user_session_path, data: { confirm: "Sign out ?" }, method: :delete %>
	<% else %>
		<%= link_to "Home", root_path %>
		<%= link_to "Sign up", new_user_registration_path %>
		<%= link_to "Sign in", new_user_session_path %>
	<% end %>
</header>
<% if signed_in? %>
	<strong>
		Signed in as <%= current_user.name %><br>
	</strong>
<% end %>