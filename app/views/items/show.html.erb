<main class="item_page clearfix">
	<div class="item_image">
		<%= attachment_image_tag @item, :item_image, :fill, 300, 300, class: "item_image_inner" %>
	</div>
	<div class="item_info">
		<strong>
			<%= @item.title %>
		</strong>
		<hr>

		<strong>
			Brand :
			<%= @item_brand %>
		</strong>
		<hr>

		<strong>
			Size :
			<%= @item.size %>
		</strong>
		<hr>

		<strong>
			Category :
			<%= @item_category %>
		</strong>
		<hr>

		<strong>Â¥<%= @item.price %></strong>
		<hr>

		<% if current_user = @item.user %>
			<%= link_to "Edit", edit_item_path(@item) %>
			<%= link_to "Delete", item_path(@item), data: { confirm: "#{@item.title} Delete?" }, method: :delete, class: "item_delete" %>
		<% end %>
	</div>
</main>
<section class="item_body clearfix">
	<div class="item_user_info">
		<h3>Seller</h3>
		<%= attachment_image_tag @item.user, :profile_image, :fill, 270, 270, fallback: "no_image.jpg", size:'270x270', class: "user_image" %>
		<br>
		<%= @item.user.name %>
		<br>
		<%= link_to user_path(@item.user) do %>
			<%= @item.user.items.count %> Items
		<% end %>
	</div>
	<div class="item_body_inner">
		<%= @item.body %>
	</div>
</section>